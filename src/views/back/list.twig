<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Items list</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                    <th>Title</th>
                    <th>Creation date</th>
                    <th>Edition</th>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.title }}</td>
                            <td>{{ item.createdAt | date('d-m-Y H:i:s') }}</td>
                            <td>
                                <a class='btn btn-xs btn-primary' href='{{ itemEditUrl }}?id={{ item.id }}' target='_blank'><i class='glyphicon glyphicon-pencil'></i></a>
                                <a class='btn btn-xs btn-danger' href='{{ itemDeleteUrl }}?id={{ item.id }}' onclick='return(confirm("Are you sure you want to delete this item ?"));'><i class='glyphicon glyphicon-trash'></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
